# test_table is an in-memory table and doesn't support UPDATE operations

# Test UPDATE on otel_logs_and_spans
statement ok
UPDATE otel_logs_and_spans 
SET status_message = 'Updated via UPDATE statement' 
WHERE project_id = 'test_project' AND id = 'sql_span1'

query T
SELECT status_message FROM otel_logs_and_spans 
WHERE project_id = 'test_project' AND id = 'sql_span1'
----
Updated via UPDATE statement

